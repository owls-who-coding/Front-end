<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PredictResult">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#EEEEEE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#111111"
                android:text="분석 결과"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/predict_ic_status"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#0099FF"
                        android:background="@drawable/ic_smile"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/predict_tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="상태가 좋아요"
                            android:textSize="25dp"
                            android:textColor="#111111"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/predict_tv_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지금 상태를 계속 유지하세요"
                            android:textSize="15dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/predict_imv_capture"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_non_image"
                        android:background="@drawable/border"
                        android:backgroundTint="#333333"/>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/predict_tv_percent"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#111111"
                            android:text="90%"
                            android:textSize="60dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/predict_tv_percent_comment"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="결막염의 확률이 제일 높아요"
                            android:textSize="15dp"/>
                    </LinearLayout>

                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <TextView
                        android:id="@+id/conjunctivitis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="결막염"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        android:id="@+id/leukaemia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="백혈병"
                        app:layout_constraintLeft_toRightOf="@id/conjunctivitis"
                        app:layout_constraintRight_toLeftOf="@id/blepharitis"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <TextView
                        android:id="@+id/blepharitis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안검염"
                        app:layout_constraintLeft_toRightOf="@id/leukaemia"
                        app:layout_constraintRight_toLeftOf="@id/euphorbia"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        android:id="@+id/euphorbia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유루증"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />



                    <TextView
                        android:id="@+id/conjunctivitis_chart"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#A9E4621D"
                        android:layout_width="20dp"
                        android:layout_height="150dp"
                        android:background="@drawable/border"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/conjunctivitis">
                    </TextView>

                    <TextView
                        android:id="@+id/leukaemia_chart"
                        android:layout_width="20dp"
                        android:layout_height="80dp"
                        android:background="@drawable/border"
                        android:backgroundTint="#AAAAAA"
                        app:layout_constraintLeft_toRightOf="@id/conjunctivitis_chart"
                        app:layout_constraintRight_toLeftOf="@id/blepharitis_chart"
                        app:layout_constraintBottom_toTopOf="@id/leukaemia">
                    </TextView>

                    <TextView
                        android:id="@+id/blepharitis_chart"
                        android:layout_width="20dp"
                        android:layout_height="100dp"
                        android:background="@drawable/border"
                        android:backgroundTint="#AAAAAA"
                        app:layout_constraintLeft_toRightOf="@id/leukaemia_chart"
                        app:layout_constraintRight_toLeftOf="@id/euphorbia_chart"
                        app:layout_constraintBottom_toTopOf="@id/blepharitis">
                    </TextView>

                    <TextView
                        android:id="@+id/euphorbia_chart"
                        android:layout_marginRight="10dp"
                        android:layout_width="20dp"
                        android:layout_height="50dp"
                        android:background="@drawable/border"
                        android:backgroundTint="#AAAAAA"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/euphorbia"
                        >
                    </TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_info"/>
                <TextView
                    android:id="@+id/predict_administer_title"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="각 질병은 이렇게 대응하세요."
                    android:textColor="#111111"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:backgroundTint="#0099FF"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/predict_administer_disease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결막염"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/predict_administer_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈이 붉은게 특징이에요. 눈을 긁지 못하게 하세요"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</FrameLayout>