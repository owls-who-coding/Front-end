<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9"
        android:layout_marginBottom="7dp"/>

    <LinearLayout
        android:id="@+id/user_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/user_nickname"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="nickname"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginLeft="16dp"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:padding="2dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="그거 강아지 상태가 좋아보이지 않네요 가까운 병원부터가시는걸 추천드립니다."
                android:textSize="14dp" />

        </LinearLayout>

<!--        <TextView-->
<!--            android:id="@+id/fix_comment"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="수정"-->
<!--            android:textSize="10dp"-->
<!--            android:layout_marginTop="3dp"-->
<!--            android:layout_marginLeft="10dp"/>-->

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="|"-->
<!--            android:textSize="10dp"-->
<!--            android:layout_marginTop="3dp"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_marginRight="5dp"/>-->

        <TextView
            android:id="@+id/delete_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제"
            android:textSize="10dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/child_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답글"
            android:textSize="10dp"
            android:layout_marginTop="3dp"/>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/child_comment_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/arrow_image_view"
            android:layout_width="12dp"
            android:layout_height="17dp"
            android:src="@drawable/comment"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="write_nickname"-->
<!--                android:textSize="12dp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:layout_marginBottom="10dp"/>-->
            <EditText
                android:id="@+id/child_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_design_2"
                android:textSize="14dp"
                android:padding="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/cancel_child_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:textSize="10dp"
                    android:layout_gravity="right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="10dp"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/upload_child_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="답변"
                    android:textSize="10dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>



        </LinearLayout>




    </LinearLayout>







</LinearLayout>