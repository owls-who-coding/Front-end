<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diary"
    android:orientation="vertical"
    android:layout_marginBottom="30dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:text="다이어리"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B4BCC8"
        android:layout_marginBottom="2dp"/>

    <CalendarView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/calendarView"
            android:layout_gravity="center"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B4BCC8"
            android:layout_marginBottom="5dp"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/kg_graph"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="몸무게"
                android:scaleX="0.7"
                android:scaleY="0.7"/>
            <RadioButton
                android:id="@+id/eat_graph"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="식사량"
                android:scaleX="0.7"
                android:scaleY="0.7"/>
            <RadioButton
                android:id="@+id/count_graph"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="배변횟수"
                android:scaleX="0.7"
                android:scaleY="0.7"/>
            <RadioButton
                android:id="@+id/out_graph"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="산책횟수"
                android:scaleX="0.7"
                android:scaleY="0.7"/>

        </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/dash_line"
        android:gravity="center"
        android:text="그래프를 보고 싶은 버튼을 클릭해주세요!"
        android:textSize="15dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/kg_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingClass"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/eat_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingClass"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/count_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingClass"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/out_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingClass"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>





